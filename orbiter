UNAME=`uname`
JAVA="java -Xms128m -Xmx256m"


#
# Get the script directory
#

DIR="`dirname $0`"
if [ "x$DIR" = "x" ]; then
	DIR=.
fi


#
# Get the jar file
#

JAR="$DIR/Orbiter.jar" 
if [ ! -f $JAR ]; then
	JAR="$DIR/dist/Orbiter.jar"
	if [ ! -f $JAR ]; then
		JAR="/usr/java/Orbiter.jar"
		if [ ! -f $JAR ]; then
			JAR="/usr/local/java/Orbiter.jar"
			if [ ! -f $JAR ]; then
				echo "orbiter: Could not find Orbiter.jar" >&2
				exit 1
			fi
		fi
	fi
fi


#
# Run the jar file
#

if [ $UNAME = "Darwin" ]; then
	DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:/usr/lib:/usr/local/lib \
		$JAVA -jar $JAR $*
else
	$JAVA -jar $JAR $*
fi

